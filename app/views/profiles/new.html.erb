
<%# patient %>
<div class="container">
  <% if current_user.patient? %>
  <h2>Gracias por registrarte, <%= @user.first_name %>!<h2>
  <p>Cual es tu meta?</p>
      <%= simple_form_for @user, url: update_profile_path do |f| %>
        <%= f.input :goal %>
        <%= f.input :date_birth %>
        <%= f.button :submit %>
      <% end %>
  <% end %>
</div>

